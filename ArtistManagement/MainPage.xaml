<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtistManagement.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Grid ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Entry x:Name="NameEntry" 
                       Placeholder="Artist Name" 
                       Grid.Row="0" Grid.Column="0"/>
                
                <Entry x:Name="GenreEntry" 
                       Placeholder="Genre" 
                       Grid.Row="0" Grid.Column="1"/>
                
                <Entry x:Name="AlbumsSoldEntry" 
                       Placeholder="Albums Sold" 
                       Keyboard="Numeric"
                       Grid.Row="1" Grid.Column="0"/>
                
                <DatePicker x:Name="ContractEndDatePicker"
                           Grid.Row="1" Grid.Column="1"/>
            </Grid>

            <Button Text="Add Artist"
                    Clicked="OnAddArtistClicked"
                    HorizontalOptions="Fill"/>

            <CollectionView x:Name="ArtistsCollection"
                          ItemsSource="{Binding Artists}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Genre}"/>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Albums Sold: "/>
                                            <Span Text="{Binding AlbumsSold}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Contract Ends: "/>
                                            <Span Text="{Binding ContractEndDate, StringFormat='{0:d}'}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>
                            <Button Text="Delete"
                                    Grid.Column="1"
                                    VerticalOptions="Center"
                                    Clicked="OnDeleteClicked"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="{Binding ArtistCount, StringFormat='Total Artists: {0}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
